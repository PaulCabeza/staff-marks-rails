<h1>Employees</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th>Last Record</th>
        <th>Status</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <% if user.marks.last %>
        <td><%= user.marks.last&.mark_type %> - <%= user.marks.last&.created_at.strftime("%m/%d/%Y") %> </td>
        <% else %>
        <td></td>
        <% end %>

        <td></td>        
        <td><%= link_to 'Show', users_show_path(@user) %></td>        
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
