<h1>Employees</h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th>Name</th>
        <th>Last Record</th>
        <th>Status</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= user.full_name %></td>
        <% if user.marks.last %>
        <td><%= user.marks.last&.mark_type %> - <%= user.marks.last&.created_at.strftime("%m/%d/%Y %I:%M %p") %> </td>
        <% else %>
        <td></td>
        <% end %>

        <td></td>        
        <td><%= link_to 'Cards', users_cards_path(user.id) %></td>        
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
