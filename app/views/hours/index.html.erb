<h1>Employee Cards</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th>Employee</th>
        <th>PO</th>        
        <th>Datetime</th>
        <th>Type</th>
        
        <th>Address</th>
        

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cards.each.with_index() do |card, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= card.user.full_name %></td>
        <td><%= card.purchaseorder %></td>
        <td><%= card.created_at.to_s(:db) %></td>
        <% if card.mark_type == 'In' %>
        <td><%= image_tag("up-blue-arrow.png", size: '16x16') %><%= card.mark_type %></td>
        <% else %>
        <td><%= image_tag("up-green-arrow.png", size: '16x16') %><%= card.mark_type %></td>
        <% end %>        
        
        <td><%= card.address %></td>
        
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Map', "http://maps.google.com/maps?&z=18&q=#{card.latitude}+#{card.longitude}&ll=#{card.latitude}+#{card.longitude}", target: :new %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
      <tr class="table-info">
        <th scope="col"></th>
        <th></th>
        <th>Total Hours</th>        
        <th></th>
        <th></th>
        
        <th></th>
        

        <th colspan="3"></th>
      </tr>

    </tbody>

  </table>
</div>

<br>